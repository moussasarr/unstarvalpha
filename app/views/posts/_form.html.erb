


<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.text_area :body, placeholder: "Compose your Post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
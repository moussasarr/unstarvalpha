<li class="media chatcomment" data-id="<%= chatcomment.id %>">
	<% if chatcomment.user %>
  <%= link_to image_tag(chatcomment.user.picture_url, alt: chatcomment.user.name, :size => "50x50", class: "media-object"),
              chatcomment.user, target: '_blank', class: 'pull-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to chatcomment.user.name, chatcomment.user, target: '_blank' %> says
      <small class="text-muted">[at <%= chatcomment.created_at.strftime('%-d %B %Y, %H:%M:%S') %>]</small></h4>
    <p><%= chatcomment.body %></p>
  </div>
  <%end%>
</li>
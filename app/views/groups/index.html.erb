
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Hi <%= current_user.username %><%= current_user.email%> | <%= render 'shared/stats' %> | Your score is : <%= current_user.score %> | You belong to x groups | X invites pending</h3>
  </div>
  <div class="panel-body">
     
       <%= link_to "Create a new group", new_group_path %></td>
        <td> <div class="fb-follow" data-href="http://unstarv.herokuapp.com/" data-height="300" data-colorscheme="light" data-layout="standard" data-show-faces="true"></div>
      
  </div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Group name</th>
      <th>Score</th>
      <th>Expertise</th>
       <th>Join | Leave</th>
      <th>Vote</th>
      <th>Type</th>
      <th>Country</th>
      <th>State</th>
      <th>Created</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>

        <% $i = 1 %>
  
  <% until $i > @groups.count  do %>
    <% @groups.each do |group| %>
    <tr>
      <td><%= $i %></td>
      <td><% if group.picture? %>
         <%= link_to (image_tag group.picture.url, :size => "90x90"), group %>
         <%else%>
         <%=  gravatar_for_group group %>
         <%end%>
         <br>
         <%= link_to group.group_name, group %></td>


      <td><%= 0 || group.score %></td>
      <td><%= group.expertise %></td>
      <td>Join|Leave</td>
      <td>Vote</td>
      <td><%= group.type %></td>
      <td><%= group.country %></td>
      <td><%= group.state %></td>
      <td>Created</td>
      <td>Admin</td>
     <% $i +=1 %>
        
    
      </tr>
      <%end%>
      </tbody>
       <%end%>
   